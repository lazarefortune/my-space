{% extends "layouts/admin.html.twig" %}

{% block stylesheets %}
  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
  <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>
{% endblock %}

{% block admin_content %}

  <div class="row">
    <div class="col-md-9 mx-auto">

      <div class="card  mt-4 p-3">
        <p>Bienvenue
          <b>{{ app.user.nom }}
            {{ app.user.prenom }}</b>
        </p>
        <p>Espace d'inspiration, lachez vous...</p>
      </div>

      {% include 'layouts/flash-messages.html.twig' %}

      <a href="{{ path('create_inspiration') }}" class="btn btn-primary mt-2 mb-4">
        Ajouter
        <i class="fas fa-arrow-right"></i>
      </a>
      <a href="{{ path('inspiration') }}" class="btn btn-secondary mt-2 mb-4">
        Liste
        <i class="fas fa-arrow-right"></i>
      </a>

      <div class="form-group">
        <label for="title">
          Titre
        </label>
        <input type="text" value="{{ story.title }}" disabled name="" id="" class="form-control">
      </div>
      <div class="form-group">
        <label for="summernote">Mon inspiration *</label>
        <textarea name="" id="summernote" class="form-control" disabled="disabled" cols="30" rows="10">{{ story.description }}
        </textarea>
      </div>
      <div class="form-group my-3">
        <label for="publishAt">Date de publication *</label>
        <input type="text" disabled value="(Le {{ story.createdAt|date("d-m-Y") }} Ã  {{ story.createdAt|date("H:i:s") }})" class="form-control" id="publishAt" required="required">
      </div>
    </div>

  </div>

{% endblock %}
