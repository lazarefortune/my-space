<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>Admin | LF</title>

		<!-- Google Font: Source Sans Pro -->
		<link
		rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
		<!-- Font Awesome -->
		<link
		rel="stylesheet" href="{{ asset('plugins/fontawesome-free/css/all.min.css') }}">
		<!-- icheck bootstrap -->
		<link
		rel="stylesheet" href="{{ asset('plugins/icheck-bootstrap/icheck-bootstrap.min.css') }}">
		<!-- Theme style -->
		<link rel="stylesheet" href="{{ asset('dist/css/adminlte.min.css') }}">
	</head>
	<body class="hold-transition login-page">
		<div
			class="login-box">
			<!-- /.login-logo -->
			<div class="card card-outline card-primary">
				<div class="card-header text-center">
					<a href="" class="h1">
						<b>My</b>Space</a>
				</div>
				<div class="card-body">
					<p class="login-box-msg">Connectez vous à votre espace</p>

					<form method="post">
						{% if error %}
							<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
						{% endif %}
						<div class="input-group mb-3">
							<input type="text" name="username" class="form-control" placeholder="Identifiant">
							<div class="input-group-append">
								<div class="input-group-text">
									<span class="fas fa-user"></span>
								</div>
							</div>
						</div>
						<div class="input-group mb-3">
							<input type="password" name="password" class="form-control" placeholder="Password">
							<div class="input-group-append">
								<div class="input-group-text">
									<span class="fas fa-lock"></span>
								</div>
							</div>
						</div>
						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

						<div class="row">
							<div class="col-8">
								<div class="icheck-primary">
									<input type="checkbox" id="remember" name="_remember_me" checked>
									<label for="remember">
										Se souvenir de moi
									</label>
								</div>
							</div>
							<!-- /.col -->
							<!-- /.col -->
						</div>
						<div class="input-group">
							<button type="submit" class="btn btn-primary btn-block">Se connecter</button>
						</div>
					</form>

					{# <div class="social-auth-links text-center mt-2 mb-3">
						<a href="#" class="btn btn-block btn-danger disabled">
							<i class="fab fa-google mr-2"></i>
							Se connecter avec Google (indisponible)
						</a>
					</div> #}
					<!-- /.social-auth-links -->

					<p class="mb-1 mt-3">
						<a href="{{ path('password_reset') }}">Mot de passe oublié ?</a>
					</p>
					<p class="mb-0">
						<a href="" class="text-center">Créer un compte</a>
					</p>
				</div>
				<!-- /.card-body -->
			</div>
			<!-- /.card -->
		</div>
		<!-- /.login-box -->

		<!-- jQuery -->
		<script src="../../plugins/jquery/jquery.min.js"></script>
		<!-- Bootstrap 4 -->
		<script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
		<!-- AdminLTE App -->
		<script src="../../dist/js/adminlte.min.js"></script>
	</body>
</html>
