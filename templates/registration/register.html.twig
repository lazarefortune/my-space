{% extends 'layouts/site_simple.html.twig' %}


{% block stylesheets %}
<style>
.form-container{
	background: url(" images/my_space_background.png ") no-repeat center center fixed;	
}
</style>

{% endblock %}

{% block site_title %}Inscription{% endblock %}

{% block site_content %}
	{% for flashError in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flashError }}</div>
	{% endfor %}

	<div class="form-container outer">
		<div class="form-form">
			<div class="form-form-wrap">
				<div class="form-container">
					<div class="form-content">

						<a href=" {{ path('home_site') }} ">
							<img src=" {{ asset('assets/img/my_space_logo.png') }} " width="70" alt="">
						</a>
						<p class="mb-0">Rejoins la communauté </p>
						
						<div class="text-left">
							{{ form_start(registrationForm) }}
							<div class="form">
								{% for flashError in app.flashes('verify_email_error') %}
									<div class="alert alert-danger" role="alert">{{ flashError }}</div>
								{% endfor %}
								{% include 'layouts/flash-messages.html.twig' %}
								{# For convenience sake of this snippet, store the errors in a variable #}
								{% set formErrors = registrationForm.vars.errors.form.getErrors(true) %}

								{# If there are errors in the form, display them in this unorganized list #}
								{% if formErrors|length %}
									<ul class="text-danger">
										{% for error in formErrors %}
											<li>{{ error.message }}</li>
										{% endfor %}
									</ul>
								{% endif %}
								{# <div class="row">
									<div class="col-6">
										<div id="username-field" class="field-wrapper input">
											<label for="nom">NOM</label>
											<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-user">
												<path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
												<circle cx="12" cy="7" r="4"></circle>
											</svg>
											{{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control', 'id': 'nom', 'placeholder': 'Nom'}}) }}
										</div>
									</div>
									<div class="col-6">
										<div id="username-field" class="field-wrapper input">
											<label for="prenom">PRENOM</label>
											<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-user">
												<path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
												<circle cx="12" cy="7" r="4"></circle>
											</svg>
											{{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-control', 'id': 'prenom', 'placeholder': 'Prénom'}}) }}
										</div>
									</div>
								</div> #}

								<div id="username-field" class="field-wrapper input">
									<label for="login">IDENTIFIANT</label>
									<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-user">
										<path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
										<circle cx="12" cy="7" r="4"></circle>
									</svg>
									{# <input id="login" name="registration_form[login]" type="text" class="form-control" placeholder="Identifiant"> #}
									{{ form_widget(registrationForm.login, {'attr': {'class': 'form-control', 'id': 'login', 'placeholder': 'Identifiant'}}) }}
									{# {{ form_errors(registrationForm.login) }} #}
									{# {% do registrationForm.login.setRendered %} #}
								</div>

								<div id="email-field" class="field-wrapper input">
									<label for="email">EMAIL</label>
									<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-at-sign register">
										<circle cx="12" cy="12" r="4"></circle>
										<path d="M16 8v5a3 3 0 0 0 6 0v-1a10 10 0 1 0-3.92 7.94"></path>
									</svg>
									{# <input id="email" name="registration_form[email]" type="text" value="" class="form-control" placeholder="Email"> #}
									{{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'id': 'email', 'placeholder': 'Email'}}) }}
									{# {{ form_errors(registrationForm.email) }} #}
									{# {% do registrationForm.email.setRendered %} #}
								</div>

								<div id="password-field" class="field-wrapper input mb-2">
									<div class="d-flex justify-content-between">
										<label for="password">MOT DE PASSE</label>
										{# <a href="auth_pass_recovery_boxed.html" class="forgot-pass-link">Forgot Password?</a> #}
									</div>
									<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-lock">
										<rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
										<path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
									</svg>
									<input id="password" name="registration_form[password]" type="password" class="form-control" placeholder="Mot de passe">
									{% do registrationForm.password.setRendered %}
									{# {{ form_widget(registrationForm.password, {'attr': {'class': 'form-control', 'id': 'password', 'placeholder': 'Mot de passe'}}) }} #}
									{# {{ form_errors(registrationForm.password) }} #}
									<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" id="toggle-password" class="feather feather-eye">
										<path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
										<circle cx="12" cy="12" r="3"></circle>
									</svg>
								</div>
								{# {{ form_row(registrationForm.agreeTerms) }} #}
								{# {{ form_errors(registrationForm.agreeTerms) }} #}

								<div class="field-wrapper terms_condition">
									<div class="n-chk">
										<label
											class="new-control new-checkbox checkbox-primary">
											{# {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'new-control-input'}}) }} #}
											<input type="checkbox"  class="new-control-input" name="registration_form[agreeTerms]">
											{% do registrationForm.agreeTerms.setRendered %}
											<span class="new-control-indicator"></span>
											<span>J'accepte les
												<a href="javascript:void(0);">
													termes et conditions
												</a>
											</span>
										</label>
									</div>
									{# {{ form_errors(registrationForm.agreeTerms) }} #}

								</div>

								<div class="d-sm-flex justify-content-between">
									<div class="field-wrapper">
										<button type="submit" class="btn btn-primary" value="">Commencer!</button>
									</div>
								</div>
								

							</div>
							{{ form_end(registrationForm) }}
							<p class="signup-link register mt-3">Vous avez déjà un compte?
								<a href=" {{ path('app_login') }} ">Connectez vous</a>
							</p>
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
