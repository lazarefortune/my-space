{% extends "layouts/admin.html.twig" %}

{% block stylesheets %}
  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
  <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>
{% endblock %}

{% block admin_content %}

  <div class="row">
    <div class="col-md-9 mx-auto">

      <div class="card  mt-4 p-3">
        <p>Bienvenue
          <b>{{ app.user.nom }}
            {{ app.user.prenom }}</b>
        </p>
        <p>Espace d'inspiration, lachez vous...</p>
      </div>

      {% include 'layouts/flash-messages.html.twig' %}

      <a href="{{ path('create_inspiration') }}" class="btn btn-primary mt-2 mb-4">
        Ajouter
        <i class="fas fa-arrow-right"></i>
      </a>

      <div class="card">
        <ul class="list-group list-group-flush">
          {% for story in allStory %}
            <li class="list-group-item ">
              <span class="font-weight-bold">
                {{ story.title }}
              </span>
              <span class="ml-4 font-italic">

                {% if story.createdAt | date("m/d/Y", "Europe/Paris") == "now" | date("m/d/Y", "Europe/Paris") %}
                  Aujourd'hui à {{ story.createdAt|date("H:i:s", "Europe/Paris") }}
                {% elseif story.createdAt | date("m/d/Y", "Europe/Paris") == "yesterday" | date("m/d/Y", "Europe/Paris") %}
                  Hier à {{ story.createdAt|date("H:i:s", "Europe/Paris") }}
                {% else %}
                  (Le
                  {{ story.createdAt|date("d/m/Y", "Europe/Paris") }}
                  à
                  {{ story.createdAt|date("H:i:s", "Europe/Paris") }}
                  )
                {% endif %}
              </span>
              <a href="{{ path('show_inspiration', {storyId: story.id} ) }}" class="text-unstyled float-right">voir plus
                <i class="fas fa-arrow-right"></i>
              </a>
            </li>
          {% endfor %}
        </ul>
      </div>

    </div>

  </div>

{% endblock %}
