            <!-- Account security -->
            <div class="card rounded rounded-lg border-0 shadow-sm mb-3">
                <div class="px-3 pt-3 h6 text-dark">
                    Sécurité
                </div>
                <div class="card-body">
                    <p class="text-muted">
                        Si vous souhaitez modifier votre mot de passe, veuillez cliquer sur le bouton ci-dessous.
                    </p>
                    <a href=" {{ path('account_edit_password') }} " class="btn btn-primary">
                        <i class="fas fa-lock"></i>
                        Modifier mon mot de passe
                    </a>
                </div>
            </div>

            <!-- General information -->
            <div class="card rounded rounded-lg border-0 shadow-sm mb-3">
                <div class="px-3 pt-3 h6 text-dark">
                    Informations générales
                </div>
                <div class="card-body">
                    <!-- created date information -->
                    <div class="d-flex justify-content-between mb-3">
                        <div class="text-muted">
                            Date de création :
                        </div>
                        <div class="text-dark font-weight-bold">
                            {{ app.user.createdAt ? app.user.createdAt|date('d/m/Y à H:i') : 'Non renseigné' }}
                        </div>
                    </div>
                    <!-- last update information -->
                    <div class="d-flex justify-content-between mb-3">
                        <div class="text-muted">
                            Dernière mise à jour :
                        </div>
                        <div class="text-dark font-weight-bold">
                            {{ app.user.updatedAt ? app.user.updatedAt|date('d/m/Y à H:i') : 'Non renseigné' }}
                        </div>
                    </div>
                    <!-- last login information -->
                    <div class="d-flex justify-content-between mb-3">
                        <div class="text-muted">
                            Dernière connexion :
                        </div>
                        <div class="text-dark font-weight-bold">
                            {{ app.user.lastLogin ? app.user.lastLogin|date('d/m/Y à H:i') : 'Non renseigné' }}
                        </div>
                    </div>

                </div>
            </div>

            <!-- Delete account section -->
            <div class="card rounded rounded-lg border-0 shadow-sm mb-3">
                {% if not app.user.isDeleted %}
                    <div class="px-3 pt-3 h6 text-dark">
                        Suppression du compte
                    </div>
                    <div class="card-body">
                        <p class="text-muted">
                            Si vous souhaitez supprimer votre compte, cliquez sur le bouton ci-dessous.
                        </p>
                        <button class="btn btn-danger" data-toggle="modal" data-target="#deletePermentlyStory">
                            <i class="fas fa-trash-alt"></i>
                            Supprimer mon compte
                        </button>
                        <!-- Modal delete account-->
                        <div class="modal fade" id="deletePermentlyStory" tabindex="-1" role="dialog"
                             aria-labelledby="deletePermentlyStoryLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="deleteStoryLabel"> Nous sommes désolés de vous voir
                                            partir!
                                        </h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            x
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <p>
                                            Vous ne pourrez plus accéder à votre compte et vos données seront supprimées
                                            définitivement de nos services.
                                        </p>
                                        <p class="text-danger">
                                            NB : Cette action est irréversible. Vous ne pourrez pas récupérer vos
                                            données.
                                        </p>
                                        <div class="custom-control custom-checkbox">
                                            <input type="checkbox" class="custom-control-input" id="customCheck1">
                                            <label class="custom-control-label text-dark" for="customCheck1"> Je
                                                souhaite supprimer mon compte et les données associées. </label>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button class="btn btn-primary" data-dismiss="modal">
                                            <i class="flaticon-cancel-12"></i>
                                            Annuler
                                        </button>
                                        <a href=" {{ path('account_delete') }} " class="btn btn-outline-danger d-none"
                                           id="deleteAccount">
                                            <i data-feather="trash-2"></i>
                                            Supprimer définitivement
                                        </a>
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>
                {% endif %}
            </div>

        </div>
    </div>


{% endblock %}

{% block javascripts %}
    <script>
        document.getElementById('customCheck1').addEventListener('change', function () {
            if (this.checked) {
                document.getElementById('deleteAccount').classList.remove('d-none').add('d-inline');
            } else {
                document.getElementById('deleteAccount').classList.add('d-none').remove('d-inline');
            }
        });
    </script>
{% endblock %}


