        </div>
      </aside>
      <!-- /.control-sidebar -->

      <!-- Main Footer -->
      <footer class="main-footer">
        <!-- To the right -->
        <div class="float-right d-none d-sm-inline">
          Un projet, une appli.
        </div>
        <!-- Default to the left -->
        <strong>Copyright &copy; 2021
