{% extends "layouts/site.html.twig" %}

{% block site_breadcrumb %}
    / Profil
{% endblock %}

{% block site_content %}

    <div class="row">
        <div class="col-xl-10 col-md-12 col-12 mx-auto">

            {# <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href=" {{ path('home') }} "> Accueil </a></li>
                    <li class="breadcrumb-item active" aria-current="page"> Profil </li>
                </ol>
            </nav> #}

            {% include 'layouts/flash-messages.html.twig' %}

            {% if app.user.isDeleted %}
                <div class="alert alert-danger">
                    <p>
                        Vous avez lancé la procédure de suppression de votre compte.
                        Vous disposez de 30 jours pour annuler cette procédure.
                        Passé ce délai, votre compte sera définitivement supprimé.
                    </p>
                    <a href=" {{ path('account_cancel_delete') }} " class="btn btn-sm btn-danger btn-sm"> Annuler la suppression </a>
                </div>
            {% endif %}

            <!-- username head -->
            <div class="card card-body rounded rounded-lg border-0 shadow-sm mb-3">
                <div class="text-center">
                    {% if app.user.profilePicture %}
                        <img src=" {{ user_profile_picture_directory }}/{{ app.user.profilePicture }} " alt=""
                             width="70" class="rounded-circle border border-5 border-primary my-2">
                    {% else %}
                        <img src=" {{ asset('images/user-group.png') }} " alt="" width="70"
                             class="rounded-circle border border-5 border-primary my-2">
                    {% endif %}
                        <h4 class="font-weight-bold">
                            {{ app.user.nom }} {{ app.user.prenom }}
                        </h4>
                        {% if app.user.nom is empty and app.user.prenom is empty %}
                            <a href=" {{ path('account_edit') }} " class="btn btn-sm btn-primary">
                                Ajouter un nom et prénom
                            </a>
                        {% else %}
{#                            {{ app.user.isVerified == 1 ? '<i class="text-info fas fa-check-circle"></i>' : '<i class="text-warning fas fa-exclamation-triangle"></i>' }}#}
                    {% endif %}
                </div>

            </div>

            {% if app.user.isVerified == 0 %}
                <div class="card shadow-sm card-body mb-3 border border-warning">
                    <div class="text-center">
                        <h6 class="font-weight-bold text-warning">Vérification de votre compte</h6>
                        <p class="text-muted">
                            Pour pouvoir utiliser toutes les fonctionnalités de notre site, vous devez confirmer votre
                            compte.
                            <br>
                            <i class="text-info fas fa-info-circle"></i>
                            <a href=" {{ path('send_verify_email', { 'token': app.user.activationToken } ) }} ">Cliquez
                                ici
                            </a>pour recevoir un nouveau mail de confirmation.
                        </p>
                    </div>
                </div>
            {% endif %}

            <!-- Account information -->
            <div class="card rounded rounded-lg border-0 shadow-sm mb-3">
                <div class="px-3 pt-3 h6 text-dark">
                    Informations du compte
                </div>
                <div class="card-body">
                    <p class="text-muted">
                        Si vous souhaitez modifier vos informations, veuillez cliquer sur le bouton ci-dessous.
                    </p>
                    <a href=" {{ path('account_edit') }} " class="btn btn-primary">
                        <i class="fas fa-user-edit"></i>
                        Modifier mes informations
                    </a>
                </div>
            </div>

            <!-- General  -->
