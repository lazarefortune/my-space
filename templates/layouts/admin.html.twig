                <a href="#" class="nav-link active">
                  <i class="nav-icon fas fa-tachometer-alt"></i>
                  <p>
                    Pages du site
                    <i class="right fas fa-angle-left"></i>
                  </p>
                </a>
                <ul class="nav nav-treeview">
                  <li class="nav-item">
                    <a href=" {{ path('admin_home') }} " class="nav-link {{ app.request.get('_route') == 'admin_home' ? 'active' }}">
                      <i class="fas fa-home nav-icon"></i>
                      <p>Accueil</p>
                    </a>
                  </li>
                  <li class="nav-item">
                    <a href=" {{ path('create_inspiration') }} " class="nav-link {{ app.request.get('_route') == 'create_inspiration' ? 'active' }}">
                      {# <i class="far fa-circle nav-icon"></i> #}
                      <i class="fas fa-plus nav-icon"></i>
                      <p>Ajouter une story</p>
                    </a>
                  </li>
                  <li class="nav-item">
                    <a href=" {{ path('inspiration') }} " class="nav-link {{ app.request.get('_route') == 'inspiration' ? 'active' }}">
                      {# <i class="far fa-circle nav-icon"></i> #}
                      <p>
                        <i class="fas fa-globe-europe nav-icon"></i>
                        Liste des stories publics</p>
                    </a>
                  </li>
                  <li class="nav-item">
                    <a href=" {{ path('my_inspiration') }} " class="nav-link {{ app.request.get('_route') == 'my_inspiration' ? 'active' }}">
                      {# <i class="far fa-circle nav-icon"></i> #}
                      <i class="fas fa-atlas nav-icon"></i>
                      <p>Mes stories</p>
                    </a>
                  </li>
                  {% if app.user.idUser == 1 %}  
                  <li class="nav-item">
                    <a href=" {{ path('admin_views_index') }} " class="nav-link {{ app.request.get('_route') == 'admin_views_index' ? 'active' }}">
                      {# <i class="far fa-circle nav-icon"></i> #}
                      <i class="fas fa-atlas nav-icon"></i>
                      <p>Consulter les vues</p>
                    </a>
                  </li>
                  <li class="nav-item">
                    <a href=" {{ path('admin_users_parameters_index') }} " class="nav-link {{ app.request.get('_route') == 'admin_users_parameters_index' ? 'active' }}">
                      {# <i class="far fa-circle nav-icon"></i> #}
                      <i class="fas fa-atlas nav-icon"></i>
                      <p>Paramètres utilisateurs</p>
                    </a>
                  </li>
                  {% endif %}
                  <li class="nav-item">
                    <a href=" {{ path('my_trash') }} " class="nav-link {{ app.request.get('_route') == 'my_trash' ? 'active' }}">
                      {# <i class="far fa-circle nav-icon"></i> #}
                      <i class="fas fa-trash nav-icon"></i>
                      <p>Corbeille</p>
                    </a>
                  </li>
                </ul>
              </li>
              {# <li class="nav-item">
								<a href=" {{ path('inspiration') }} " class="nav-link {{ app.request.get('_route') == 'inspiration' ? 'active' }}">
									<i class="nav-icon fas fa-th"></i>
									<p>
										Liste des histoires
										<span class="right badge badge-danger">New</span>
									</p>
								</a>
							</li> #}
            </ul>
          </nav>
          <!-- /.sidebar-menu -->
        </div>
        <!-- /.sidebar -->
      </aside>

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-6">
                <h1 class="m-0">My Space</h1>
              </div>
