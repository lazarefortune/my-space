{% extends "layouts/admin.html.twig" %}

{% block stylesheets %}
  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
  <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>
{% endblock %}

{% block admin_content %}

  <div class="row">
    {% include 'layouts/flash-messages.html.twig' %}

    <div class="col-md-8 mx-auto">
    <a href=" {{ path('admin_users_parameters_index') }} " class="btn btn-primary mb-4">Param√®tres des vues</a>
    

    {% for view in views %}
        <div class="card card-body">
            <p>
            <b>{{ view.idUser.nom }} {{ view.idUser.prenom }}</b> a vu <b>{{ view.idStory.title }}</b> le
            <b>{{ view.date|date("d/m/Y H:i:s") }}</b>
            {% if view.commentary %}
              <br>
              <i>{{ view.commentary }}</i>
            {% endif %}
            </p>
        </div>
        
    {% endfor %}

    </div>

  </div>

{% endblock %}
