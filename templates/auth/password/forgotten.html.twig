{% extends "layouts/site_simple.html.twig" %}

{% block site_content %}

	<div class="form-container outer">
		<div class="form-form">
			<div class="form-form-wrap">
				<div class="form-container">
					<div class="form-content">

						<h3 class="">Réinitialisation du mot de passe</h3>
						<p class="signup-link recovery">Vous recevrez les instructions par email!</p>
						<div class="text-left">
							{{ form_start(emailForm) }}
							<div class="form">
								{% include 'layouts/flash-messages.html.twig' %}
								<div id="email-field" class="field-wrapper input">
									<div class="d-flex justify-content-between">
										<label for="email">IDENTIFIANT ou EMAIL</label>
									</div>
									<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-at-sign">
										<circle cx="12" cy="12" r="4"></circle>
										<path d="M16 8v5a3 3 0 0 0 6 0v-1a10 10 0 1 0-3.92 7.94"></path>
									</svg>
									<input id="email" name="reset_password[email]" type="text" class="form-control" value="" placeholder="Identifiant ou Email" required>
									{% do emailForm.email.setRendered %}
								</div>

								<div class="d-sm-flex justify-content-between">

									<div class="field-wrapper">
										<button type="submit" class="btn btn-primary" value="">Réinitialiser</button>
									</div>
								</div>

								<div class="text-center text-muted mt-4">
									<a href="{{ path('app_login') }}" class="btn btn-sm btn-outline-primary">Revenir à la connexion</a>
								</div>

							</div>
							{{ form_end(emailForm) }}
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
